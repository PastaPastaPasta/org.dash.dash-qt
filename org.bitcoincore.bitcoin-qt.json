{
  "id": "org.bitcoincore.bitcoin-qt",
  "runtime": "org.freedesktop.Platform",
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "20.08",
  "command": "bitcoin-qt",
  "finish-args": [
    /* Xorg support */
    "--socket=x11",
    /* Sound */
    "--socket=pulseaudio",
    /* OpenGL access. */
    "--device=dri",
    /* IPC access. */
    "--share=ipc",
    /* Network acess. */
    "--share=network"
  ],
  "modules": [
    {
      "name": "bitcoin-core",
      "buildsystem": "simple",
      "build-commands": [
        "install -m 0744 -D -t /app/bin/internal bin/bitcoind",
        "install -m 0744 -D -t /app/bin/internal bin/bitcoin-qt",
        "install -m 0744 -D -t /app/bin/internal bin/bitcoin-cli",
        "install -m 0744 -D -t /app/bin/internal bin/test_bitcoin"
      ],
      "post-install": ["/app/bin/internal/test_bitcoin"],
      "sources": [
        {
          "type": "archive",
          "only-arches": ["x86_64"],
          "url": "https://bitcoincore.org/bin/bitcoin-core-0.20.1/bitcoin-0.20.1-x86_64-linux-gnu.tar.gz",
          "sha256": "376194f06596ecfa40331167c39bc70c355f960280bd2a645fdbf18f66527397"
        },
        {
          "type": "archive",
          "only-arches": ["arm"],
          "url": "https://bitcoincore.org/bin/bitcoin-core-0.20.1/bitcoin-0.20.1-arm-linux-gnueabihf.tar.gz",
          "sha256": "55b577e0fb306fb429d4be6c9316607753e8543e5946b542d75d876a2f08654c"
        },
        {
          "type": "archive",
          "only-arches": ["aarch64"],
          "url": "https://bitcoincore.org/bin/bitcoin-core-0.20.1/bitcoin-0.20.1-aarch64-linux-gnu.tar.gz",
          "sha256": "60c93e3462c303eb080be7cf623f1a7684b37fd47a018ad3848bc23e13c84e1c"
        }
      ]
    },
    {
      "name": "misc",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dp -m 644 org.bitcoincore.bitcoin-qt.desktop /app/share/applications/org.bitcoincore.bitcoin-qt.desktop",
        "install -Dp -m 644 bitcoin.svg /app/share/icons/hicolor/scalable/apps/org.bitcoincore.bitcoin-qt.svg",
        "install -Dp -m 644 org.bitcoincore.bitcoin-qt.metainfo.xml /app/share/metainfo/org.bitcoincore.bitcoin-qt.metainfo.xml",
        "bash install_wrappers.sh"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.bitcoincore.bitcoin-qt.desktop"
        },
        {
          "type": "file",
          "path": "org.bitcoincore.bitcoin-qt.metainfo.xml"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/bitcoin/bitcoin/v0.20.1/src/qt/res/src/bitcoin.svg",
          "sha256": "86cdf6d03ddd38ca949e8d8e3f34bbc87abed12baf48bf090ce9e5b2339b3542"
        },
        {
          "type": "file",
          "path": "install_wrappers.sh"
        }
      ]
    }
  ]
}
